<div class="wrapper {{if auth.signedIn 'non-centered' 'centered'}}">

  {{top-bar}}

  {{flash-display}}

  <div class="wrapper-main">
    <div id="main" role="main">
      {{yield}}
    </div>
  </div>

  <aside id="left" class="{{unless auth.signedIn 'hidden'}}">
    {{outlet "left"}}
  </aside>

  {{#if auth.signedOut}}
    {{page-footer}}
  {{else if features.dashboard}}
    {{page-footer}}
  {{/if}}
</div>
