<header id="top" class="top" style={{if features.makeHeaderPink 'background-color: pink;' ''}}>
  <div class="centered">
    {{render "top"}}
  </div>
</header>

<div class="centered" style="background: white;">
  <div class="wrapper-main">
    <div id="main" class="mail" role="main">
      <div class="features-hero">
        <h1 class="profile-header">Beta Features</h1>
        <p class="helptext">We'd love to get your feedback on some features
          we're working on to make Travis CI even better.
          To enable a feature, simply toggle the corresponding switch. You can
          return to our standard experience at any time by disabling a given
          flag.</p>
      </div>
      <div class="profile-header">
        <h1>{{accountName}}</h1>
      </div>

      {{#if featuresLoading}}
        {{loading-indicator}}
      {{else}}
      <div id="administerable-hooks">
        <ul class="profile-hooklist">
          {{#each model as |feature|}}
            <article class="feature">
              <h2>{{feature.name}}</h2>
              {{feature-toggle feature=feature}}
              <p>{{feature.description}}</p>
            </article>
          {{else}}
            Oops! It looks like we don't have any experimental features for you
            to try yet.
          {{/each}}
        </ul>
      </div>
      {{/if}}
    </div>
  </div>
</div>
<footer class="{{if auth.signedIn 'hidden'}}">
  {{render "footer"}}
</footer>
