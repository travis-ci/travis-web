{{#travis-layout layoutName="layouts/center" class="features"}}

  <header class="features-hero">
    <h1 class="h1--grey">Beta Features</h1>
    <p class="text-big">We'd love to get your feedback on some features
      we're working on to make Travis CI even better.</p>
    <p class="text-big">To enable a feature, simply toggle the corresponding switch. You can
      return to our standard experience at any time by disabling a given
      flag.</p>
  </header>
  <div class="profile-header">
    <h1>{{accountName}}</h1>
  </div>

  {{#if featuresLoading}}
    {{loading-indicator}}
  {{else}}
    <ul class="features-list">
      {{#each model as |feature|}}
        {{beta-feature feature=feature}}
      {{else}}
        Oops! It looks like we don't have any experimental features for you
        to try yet.
      {{/each}}
    </ul>
  {{/if}}
{{/travis-layout}}
