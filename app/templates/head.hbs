{{!--
  Add content you wish automatically added to the documents head
  here. The 'model' available in this template can be populated by
  setting values on the 'head-data' service.
--}}
{{#if model.useTailwindBase}}
  <link rel="stylesheet" href="/assets/tailwind-base.css" />
{{/if}}

{{#let
  (hash
    passed='green'
    failed='red'
    errored='red'
    canceled='grey'
    started='yellow'
    queued='yellow'
    created='yellow'
    received='yellow'
  )
  as |colorForState|
}}
  {{#let (get colorForState this.model.buildState) as |color| }}
    <link rel="icon" type="image/png" href="/images/favicon{{if color (concat '-' color)}}.png" />
  {{/let}}
{{/let}}