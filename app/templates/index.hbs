{{#if auth.signedIn}}
  <div class="wrapper {{if auth.signedOut "centered"}}">
    <TopBar />
    <FlashDisplay />
    <div class="wrapper-main">
      <div id="main" role="main" class="main">
        {{#if repo.isLoaded}}
          <RepositoryLayout
            @repo={{repo}}
            @build={{build}}
            @job={{job}}
            @tab={{tab}}
          />
        {{else}}
          <LoadingIndicator />
        {{/if}}
      </div>
    </div>
    {{#if auth.signedIn}}
      {{#unless features.dashboard}}
        <aside id="left" class="{{unless auth.signedIn "hidden"}}">
          <RepositorySidebar />
        </aside>
      {{/unless}}
    {{/if}}
  </div>
{{else}}
  <div class="wrapper centered">
    {{component
      landingPage
      signIn=(action "signIn" target=auth)
      signOut=(action "signOut" target=auth)
    }}
  </div>
{{/if}}