{{#builds-wrapper contentType=contentType repo=repo}}
{{#if isLoaded}}
  <ul class="build-list">
    {{#each builds as |build|}}
      {{builds-item build=build}}
    {{else}}
      {{no-builds repo=repo isPR=displayPullRequests isBranch=displayBranches}}
    {{/each}}
  </ul>
  {{#if displayShowMoreButton}}
    <p>
      {{show-more-button isLoading=isLoading showMore=(action 'showMoreBuilds')}}
      {{#if isLoading}}
        {{loading-indicator}}
      {{/if}}
    </p>
  {{/if}}

{{else}}
  <ul class="build-list">
    {{#each placeholderBuilds as |build|}}
      {{builds-item build=build}}
    {{/each}}
  </ul>
{{/if}}
{{/builds-wrapper}}
