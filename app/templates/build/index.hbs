{{#if build.isMatrix}}
  {{#if build.stages}}
    {{#each build.sortedStages as |stage|}}
      <JobsList
        @stage={{stage}}
        @build={{build}}
        @repo={{build.repo}}
        @stages={{sortedBuildStages}}
      />
    {{/each}}
  {{else}}
    <JobsList
      @jobs={{build.requiredJobs}}
      @repo={{build.repo}}
      required="true"
    />
    <JobsList @jobs={{build.allowedFailureJobs}} @repo={{build.repo}} />
  {{/if}}
{{/if}}