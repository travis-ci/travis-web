{{#let this.build as |build|}}
  {{#if build.isMatrix}}
    {{#unless (eq this.messagesMaxLevel "info")}}
      <Request::Messages
        @request={{this.request}}
        @messages={{this.request.messages}}
      />
    {{/unless}}
    {{#if build.stages}}
      {{#each build.sortedStages as |stage|}}
        <JobsList
          @stage={{stage}}
          @build={{build}}
          @repo={{build.repo}}
          @stages={{this.sortedBuildStages}}
        />
      {{/each}}
    {{else}}
      <JobsList
        @jobs={{build.requiredJobs}}
        @build={{build}}
        @repo={{build.repo}}
        @required={{true}}
      />
      <JobsList
        @jobs={{build.allowedFailureJobs}}
        @build={{build}}
        @repo={{build.repo}}
      />
    {{/if}}
  {{/if}}
{{/let}}
