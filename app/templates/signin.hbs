<TravisLayout @layoutName="layouts/center">
  <div class="content-page">
    <img
      src="/images/logos/TravisCI-Mascot-1.svg"
      alt="Travis CI mascot"
      width="200"
      height="200"
    />
    <h1 class="content-title auth">
      We're so glad you're here!
    </h1>
    {{#if this.auth.signedOut}}
      <h2 class="content-subtitle">
        Please sign in to view your repositories.
      </h2>
      <p>
        <button
          type="button"
          title="Sign into Travis CI"
          class="content-button"
          onclick={{action "signIn" target=this.auth}}
        >
          Sign in with GitHub
        </button>
      </p>
    {{else if this.auth.signingIn}}
      <h2 class="content-subtitle">
        We're signing you in,
        <br />
        that might take a moment.
      </h2>
      <p class="content-button">
        <span class="label-align">
          Signing in
        </span>
        <LoadingIndicator @inline={{true}} @white={{true}} />
      </p>
    {{/if}}
  </div>
</TravisLayout>
