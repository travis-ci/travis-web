<TravisLayout @layoutName="layouts/center" class="tailwind-overrides" data-test-signin-page="">
  <UiKit::Box
    @position={{hash type='relative'}}
    @margin={{hash top=20 x='auto'}}
    @maxWidth='2xl'
  >
    <UiKit::Box
      @position={{hash type='absolute' top=0 left=0}}
      @margin={{hash top=-12 left=-32}}
      @height={{64}}
    >
      <SvgImage @name="blue-blob" @height={{224}} />
    </UiKit::Box>

    <UiKit::Box
      @position={{hash type='absolute' top=0 right=0}}
      @margin={{hash top=-12 right=-16}}
      @width={{56}}
    >
      <SvgImage @name="grey-gradient-circle" />
    </UiKit::Box>

    <UiKit::Box
      @color='white'
      @display='flex'
      @flexDir='col'
      @flexAlign='center'
      @layer='10'
      @overflow={{hash all='hidden'}}
      @padding={{hash all=8 top=4}}
      @position={{hash type='relative'}}
      @radius='md'
      @shadow='md'
      @textAlign='center'
    >
      <UiKit::Text @tag='h1' @variant='h1'>
        Sign in
      </UiKit::Text>
      <UiKit::Text @margin={{hash bottom=6}}>
        Welcome back{{if this.hasAccounts ', hop back in with:' '!'}}
      </UiKit::Text>

      {{#if this.hasAccounts}}
        {{#each this.accounts as |account| }}
          <UiKit::ButtonSignin @account={{account}} />
        {{/each}}

        <UiKit::Text @margin={{hash y=6}}>
          or sign in with another account
        </UiKit::Text>
      {{/if}}

      <UiKit::ButtonSignin @provider='github' />
      <UiKit::ButtonSignin @provider='bitbucket' />
      <UiKit::ButtonSignin @provider='gitlab' />
      <UiKit::ButtonSignin @provider='assembla' />

      {{#unless this.hasAccounts}}
        <UiKit::Text @margin={{hash y=6}}>
          Don't have an account?
          <UiKit::Link @route='signup' @color='green-light'>
            Sign up
          </UiKit::Link>
        </UiKit::Text>
      {{/unless}}
    </UiKit::Box>

    <UiKit::Box
      @layer='0'
      @margin={{hash bottom=-16 left=-20}}
      @position={{hash type='absolute' bottom=0 left=0}}
      @width={{56}}
    >
      <SvgImage @name="red-dash-circle" />
    </UiKit::Box>
  </UiKit::Box>
</TravisLayout>
