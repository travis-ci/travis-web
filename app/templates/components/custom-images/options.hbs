<div class="search">
  <div class="search-inner">
    <Input
      id="travis-search"
      {{on "input" (action this.onFilter) }}
      placeholder="Filter all custom images"
    />
    <label for="travis-search">
      <SvgImage @name="icon-search" @class="icon" />
    </label>
  </div>
</div>

{{#if this.isOwnerAdmin}}
<nav
  class="option-button {{if this.isOpen 'is-open'}}"
  {{on 'click' (action this.toggle)}}
  {{on 'mouseleave' (action this.close)}}
>
<button class="option-display" type="button" title="Show more options">
  <span class="label-align">
    More options
  </span>
  <span class="option-tofu">
    <SvgImage @name="icon-tofuburger" @class="icon-tofu" />
  </span>
</button>
<ul class="option-dropdown">
  <li>
    <button
      type="button"
      {{on 'click' (action this.onSelectAll)}}
    >
      Select All
    </button>
  </li>
  {{!-- Commented out for future implementation --}}
  {{!--
  <li>
    <button
      type="button"
    >
      Set As Public
    </button>
  </li>
  <li>
    <button
      type="button"
    >
      Set As Private
    </button>
  </li>
  --}}
  <li>
    <button
      type="button"
      {{on 'click' (action this.onDeleteSelected)}}
    >
      Delete
    </button>
  </li>
</ul>
</nav>
{{/if}}
