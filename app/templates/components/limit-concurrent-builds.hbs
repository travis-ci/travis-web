<TravisSwitch
  @active={{enabled}}
  @description={{description}}
  @onToggle={{perform toggle}}
/>
<a
  href="https://docs.travis-ci.com/user/customizing-the-build/#limiting-concurrent-jobs"
  title="about the concurrency setting"
  class="settings-tooltip"
>
  <EmberTooltip @text="Read more about concurrent jobs" />
  {{svg-jar "icon-help" class="icon-help"}}
</a>
{{#if enabled}}
  <input
    value={{value}}
    onchange={{action limitChanged value="target.value"}}
    pattern="/^[0-9]+$/"
  />
{{/if}}
{{#if toggle.isRunning}}
  <LoadingIndicator @inline={{true}} />
{{/if}}