<div class="wrapper-all-filters">
  {{#basic-dropdown as |dd|}}
    {{#dd.trigger class="build-filter-label"}}
      {{this.buildFilterLabel}}
      <span class="caret down"></span>
    {{/dd.trigger}}
    {{#dd.content class="dropdown-content"}}
      <div class="notify-actions__search">
        <div class="notify-input-search input-search">
          <SvgImage @name="icon-insights-search" @class="input-search-icon" />
          <Input
            @value={{this.query}}
            class="notify-input-search__input"
            placeholder="Repositories"
            onKeyUp={{perform this.search}}
          />
        </div>
      </div>
      {{#each this.allRepositories as |repository|}}
        <label class="checkbox-label">
          <input
            class="checkbox-table filled-in"
            id="{{repository.id}}"
            type="checkbox"
            checked={{contains repository this.selectedRepos}}
            onChange={{action "toggleRepoCheck" repository}}
          />
          <span class="checkbox-title">{{repository.name}}</span>
        </label>
      {{/each}}
    {{/dd.content}}
  {{/basic-dropdown}}
</div>