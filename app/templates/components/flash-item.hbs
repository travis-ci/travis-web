<p class="flash-message">
  {{#if flash.icon}}{{svg-jar flash.icon}}{{/if}}
  {{#if flash.preamble}}<span class='preamble'>{{flash.preamble}} </span>{{/if}}<span class='message'>{{{flash.message}}}</span>
</p>
{{#if flash.closeButton}}
  <button type="button" class="no-button close" {{action "close"}}>
    {{svg-jar 'flash-close' class="icon"}}
  </button>
{{/if}}
