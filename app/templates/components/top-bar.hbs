<div class="topbar {{if this.isNavigationOpen 'expanded'}} {{if this.showBroadcasts 'expanded'}}" >
  <HeaderBurgerMenu @isOpen={{this.isNavigationOpen}} @onClick={{action 'toggleNavigation'}} />
  <h1 id="logo" class="logo">
    <ExternalLinkTo
      @content="Travis CI"
      @href="https://travis-ci.com"
    />
  </h1>
  <HeaderBroadcasts @showBroadcasts={{this.showBroadcasts}} />
  {{#unless (and (or (eq this.router.currentRouteName 'signin') (eq this.router.currentRouteName 'signup') ) this.features.proVersion)}}
    <HeaderLinks @isOpen={{this.isNavigationOpen}} />
  {{/unless}}
  <ProfileMenu />
</div>
{{#if this.isUnconfirmed}}
 <UnconfirmedUserBanner />
{{/if}}
{{#if this.hasNoPlan}}
  <NoPlan @model={{this.model}} />
{{/if}}
{{#if this.features.enterpriseVersion}}
  <EnterpriseBanner />
{{/if}}
{{#if this.user}}
  <RepositorySecurityBanner />
{{/if}}
{{#unless this.features.proVersion}}
  <MigrationBanner />
{{/unless}}
{{#if hasBlock}}
  {{yield}}
{{else if this.showCta}}
  <div class="cta">
    <p class="row">
      Help make Open Source a better place and start building better software today!
    </p>
  </div>
{{/if}}
