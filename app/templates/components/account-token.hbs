<div class="label-and-token">
  <span class="label">
    Token
  </span>
  <span class="token-field {{if this.showRegenerateButton 'token-field-regen' ''}}">
    {{#if this.showCopySuccess}}
      <span class="token-copied-text">
        Token copied!
      </span>
    {{else if this.tokenIsVisible}}
      <span class="auth-token">
        {{this.token}}
      </span>
    {{else}}
      <span class="obfuscated-chars">
        {{obfuscated-chars 20}}
      </span>
    {{/if}}
  </span>
</div>
<div class="{{if this.showRegenerateButton 'token-actions-regen' ''}} token-actions">
  <CopyButton
    class="copy-button {{this.buttonClass}}"
    @text={{this.token}}
    @onSuccess={{action "copyTokenSuccessful"}}
  >
    <SvgImage @name="icon-copy" @class="icon" />
    <span>Copy token</span>
  </CopyButton>
  <button class="show-token" onclick={{action "tokenVisibility"}}>
    <SvgImage @name="icon-seemore" @class="icon" />
    <span>
      {{if this.tokenIsVisible "Hide token" "View token"}}
    </span>
  </button>
  {{#if this.showRegenerateButton}}
  <button class="show-token" onclick={{action "regenerateToken"}}>
    <SvgImage @name="icon-restart" @class="icon" />
    <span>
      Regenerate
    </span>
  </button>
  {{/if}}
</div>
