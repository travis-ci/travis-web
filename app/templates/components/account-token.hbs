<div class="label-and-token">
  <span class="label">
    Token
  </span>
  <span class="token-field">
    {{#if showCopySuccess}}
      <span class="token-copied-text">
        Token copied!
      </span>
    {{else if tokenIsVisible}}
      <span class="auth-token">
        {{auth.token}}
      </span>
    {{else}}
      <span class="obfuscated-chars">
        {{obfuscated-chars 20}}
      </span>
    {{/if}}
  </span>
</div>
<div class="token-actions">
  <CopyButton
    class="copy-button"
    @clipboardText={{auth.token}}
    @title="Copy to clipboard"
    @success={{action "copyTokenSuccessful"}}
  >
    {{svg-jar "icon-copy" class="icon"}}
    <span>
      Copy token
    </span>
  </CopyButton>
  <button class="show-token" {{action "tokenVisibility" bubbles=false}}>
    {{svg-jar "icon-seemore" class="icon"}}
    <span>
      {{if tokenIsVisible "Hide token" "View token"}}
    </span>
  </button>
</div>