<Notification
  @type='global'
  @severity='warning'
>
  <span data-test-flash-message-text class="message">
        Builds temporarily disabled for public repositories due to an insufficient or disabled credit allowance.
        Please visit
        {{#if @isUser}}
          <LinkTo @route="account.billing">Plan page</LinkTo>
        {{else}}
          <LinkTo @route="organization.billing" @model={{@owner}}>Plan page</LinkTo>
        {{/if}}
        to replenish your credit balance or alter your
        {{#if @isUser}}
          <LinkTo @route="account.billing" @query={{hash anchor="oss-consumption"}}>Consume paid credits for OSS setting</LinkTo>.
        {{else}}
          <LinkTo @route="organization.billing" @model={{@owner}} @query={{hash anchor="oss-consumption"}}>Consume paid credits for OSS setting</LinkTo>.
        {{/if}}
      </span>
</Notification>
