<p class='plan-overview__name flex flex--v-center' data-test-plan-name='true'>
  {{#if this.subscription.plan }}
    {{concat this.subscription.plan.name ' plan'}}
  {{else}}
    Unknown plan
  {{/if}}
  {{#if this.subscription.isManual}}
    {{#if this.subscription.manualSubscriptionExpired}}
      <span class="badge red square" data-test-expired-status='true'>
        expired
      </span>
    {{else}}
      <span class="badge green square" data-test-active-status='true'>
        active
      </span> 
    {{/if}}
    <span class="badge square white-badge manual" data-test-manual-status='true'>
      manual subscription
    </span>
  {{else}}
    {{#if this.subscription.isSubscribed}}
      {{#if this.isGithubTrial}}
        <span class="badge grey square grey-badge" data-test-canceled-status='true'>
          trial
        </span>
      {{else if this.hasGithubTrialEnded}}
        <span class="badge red square" data-test-expired-status='true'>
          expired
        </span>
      {{else}}
        <span class="badge green square" data-test-active-status='true'>
          active
        </span>
      {{/if}}
    {{else if this.subscription.isExpired}}
      <span class="badge red square" data-test-expired-status='true'>
        expired
      </span>
    {{else if this.subscription.isCanceled}}
      <span class="badge grey square grey-badge" data-test-canceled-status='true'>
        canceled
      </span>
    {{else}}
      <span class="badge grey square grey-badge" data-test-grey-status='true'>
        {{this.subscription.status}}
      </span>
    {{/if}}
  {{/if}}

  {{#if this.subscription.isGithub}}
    <span class="badge square white-badge" data-test-github-status='true'>
      github marketplace subscription
    </span>
  {{/if}}
</p>
