<div id="tracer-button">
  <a class="pointer" onclick={{action "toggleOpen" preventDefault=true}}>
    ✨ tracing ({{this.requests.length}}) ✨
  </a>
</div>
<div id="tracer-panel" class="{{if panelIsOpen 'open'}}">
  <table class="requests">
    {{#each this.requests as |req|}}
      <tr>
        <td class="method">
          {{req.method}}
        </td>
        <td class="url">
          {{req.url}}
        </td>
        <td class="status {{if req.error 'err'}}">
          {{req.status}}
        </td>
        <td class="duration">
          {{req.duration}}ms
        </td>
        <td class="request-id">
          {{#if req.requestId}}
            {{#if this.config.apiTraceEndpoint}}
              <a href="{{this.config.apiTraceEndpoint}}{{req.requestId}}">
                {{req.requestIdShort}}
              </a>
            {{else}}
              {{req.requestIdShort}}
            {{/if}}
          {{else}}
            n/a
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </table>
</div>
