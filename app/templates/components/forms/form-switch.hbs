<div class="switch-inner">
  <span class="on">
    {{#if this.onText}}
      <span>{{this.onText}}</span>
    {{else}}
      <SvgImage @name="icon-passed" @class="icon-on" @alt="on" />
    {{/if}}
  </span>
  <span class="off">
    {{#if offText}}
      <span>{{offText}}</span>
    {{else}}
      <span class="off">
        <SvgImage @name="icon-failed" @class="icon-off" @alt="off" />
      </span>
    {{/if}}
  </span>
</div>

{{yield}}
