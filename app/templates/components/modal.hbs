<AnimatedIf
  @predicate={{this.isVisible}}
  @use={{this.transition}}
  @duration={{300}}
>
  <div
    class="fixed inset-0 z-40 flex items-center justify-center overflow-hidden bg-grey-800-fog"
    {{on 'click' (action 'clickOverlay')}}
  >
    <div
      class="bg-white p-8 relative rounded-sm"
      data-test-modal
      ...attributes
      {{on 'click' this.clickModal}}
    >
      {{~yield~}}
      {{#if this.closeButton}}
        <button
          type="button"
          title="Close modal"
          class="absolute cursor-pointer top-0 right-0 p-0 mt-8 mr-8"
          {{on 'click' (action 'onClose')}}
        >
          <SvgImage @name="icon-failed" @class="w-5 h-5" />
        </button>
      {{/if}}
    </div>
  </div>
</AnimatedIf>