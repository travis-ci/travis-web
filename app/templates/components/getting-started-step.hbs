<UiKit::Box
  @display='flex'
  @flexDir={{hash base='row' sm=this.smDir}}
  @flexWrap='wrap'
>
  {{!-- Image --}}
  <UiKit::Box
    @margin={{hash base=(hash bottom=4) sm=(hash bottom=20)}}
    @padding={{hash x=4}}
    @width={{hash base='full' sm='1/3' md='1/4'}}
  >
    <UiKit::Box @margin={{hash x='auto'}} @maxWidth='2xs'>
      <UiKit::Text @color={{vcs-color this.provider 'main'}}>
        <SvgImage @name={{this.imageName}} />
      </UiKit::Text>
    </UiKit::Box>
  </UiKit::Box>

  {{!-- Text --}}
  <UiKit::Box
    @margin={{hash base=(hash bottom=16) sm=(hash bottom=20)}}
    @padding={{hash x=4}}
    @width={{hash base='full' sm='2/3' md='3/4'}}
  >
    {{!-- Title --}}
    <UiKit::Grid
      @align='center'
      @base='auto'
      @justify='start'
      @wrap='no-wrap'
      as |titleGrid|
    >
      <titleGrid.item @margin={{hash bottom=4 right=2}}>
        <UiKit::Box
          @color={{vcs-color this.provider 'main'}}
          @display='flex'
          @flexAlign='center'
          @flexJustify='center'
          @radius='full'
          @width={{8}}
          @height={{8}}
        >
          <UiKit::Text @color='white' @size='xl' @weight='light'>{{this.number}}</UiKit::Text>
        </UiKit::Box>
      </titleGrid.item>
      <titleGrid.item @margin={{hash bottom=4}}>
        <UiKit::Text @color={{vcs-color this.provider 'main'}} @size='2xl' @weight='light'>
          {{this.title}}
        </UiKit::Text>
      </titleGrid.item>
    </UiKit::Grid>

    {{!-- Content --}}
    <UiKit::Box>{{yield}}</UiKit::Box>
  </UiKit::Box>
</UiKit::Box>