<div class="inner-yaml-container">
  <div class="file-name">
    {{#if fileUrl}}
      <ExternalLinkTo @href={{fileUrl}}>
        {{svg-jar "job-name-icon" class="icon" width=14 height=14}}
        <span class="vertical-align">
          {{filePath}}
        </span>
      </ExternalLinkTo>
    {{else}}
      {{svg-jar "job-name-icon" class="icon" width=14 height=14}}
      <span class="vertical-align">
        {{filePath}}
      </span>
    {{/if}}
  </div>
  <div class="position-relative">
    <CodeBlock data-test-yaml @language="yaml" class="codedisplay">
      {{formattedConfig}}
    </CodeBlock>
    <CopyButton
      @clipboardText={{rawConfig.config}}
      @title={{buttonLabel}}
      @success={{action "copied" rawConfig.source}}
    >
      {{svg-jar "icon-copy" class="icon"}}
      <span>
        {{buttonLabel}}
      </span>
    </CopyButton>
  </div>
</div>