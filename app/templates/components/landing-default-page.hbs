        {{/if}}
        {{#if auth.signingIn}}
          <button class="hero-button org">
            <span class="loading-indicator--white"><i></i><i></i><i></i></span>
            <span class="label-align">Signing In</span></button>
        {{/if}}

      </div>
      <div class="large-12 columns laptop-wrapper">
