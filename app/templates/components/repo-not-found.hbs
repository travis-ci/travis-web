<div class="missing-notice">
  <figure class="page-graphic">
    <SvgImage @name="barricade" @class="barricade" />
  </figure>
  <h2 class="page-title">
    We couldn't display the repository<br />
    <span class="h2--red">
      {{this.slug}}
    </span>
  </h2>
  {{#if this.features.proVersion}}
    <p class="page-notice">
      This repository may not exist or you may need to
      {{#if this.auth.signedIn}}
        use another account to have access to it <br />
      {{/if}}
      <button
        class="auth-button--white pointer m-l-s {{if this.auth.signedIn 'mt-5'}}" type="button" {{on 'click' (action 'signIn')}}
      >
        Sign in {{if this.auth.signedIn 'with another account'}}
      </button>
    </p>
  {{/if}}
</div>
