{{#if this.user.isSyncing}}
  <div data-test-is-syncing-button class="button is-syncing">
    <span class="loading-indicator--white label-align">
      <i></i>
      <i></i>
      <i></i>
    </span>
    <span class="label-align">
      Syncing from {{vcs-name this.user.vcsType}}
    </span>
  </div>
{{else}}
  <button
    data-test-start-sync-button
    class="button"
    type="button"
    onclick={{action "sync"}}
  >
    <SvgImage @name="icon-restart" @class="icon white" />
    <span class="label-align">
      Sync account
    </span>
  </button>
  <div class="sync-last-container">
    <span class="sync-last">
      Last synced
      {{format-time this.user.syncedAt}}
    </span>
  </div>
{{/if}}
