<div class="heatmap-container">
  <div class="range-selector-heatmap">
    <div>
      {{#basic-dropdown as |dd|}}
        {{#dd.trigger class="build-filter-label"}}
          {{this.buildFilterLabel}}
          <span class="caret down"></span>
        {{/dd.trigger}}
        {{#dd.content class="dropdown-content"}}
          <li>
            <a
              class="dropdown-list-elements"
              {{on "click" (action "setBuildFilter" "all" dd)}}
            >
              <div class="dropdown-list-builds">
                <div class="box all"></div>
                <span>All Builds</span>
              </div>
            </a>
          </li>
          <li>
            <a
              class="dropdown-list-elements"
              {{on "click" (action "setBuildFilter" "success" dd)}}
            >
              <div class="dropdown-list-builds">
                <div class="box successful"></div>
                <span>Successful Builds</span>
              </div>
            </a>
          </li>
          <li>
            <a
              class="dropdown-list-elements"
              {{on "click" (action "setBuildFilter" "failed" dd)}}
            >
              <div class="dropdown-list-builds">
                <div class="box failed"></div>
                <span>Failed Builds</span>
              </div>
            </a>
          </li>
          <li>
            <a
              class="dropdown-list-elements"
              {{on "click" (action "setBuildFilter" "error" dd)}}
            >
              <div class="dropdown-list-builds">
                <div class="box errored"></div>
                <span>Errored Builds</span>
              </div>
            </a>
          </li>
          <li>
            <a
              class="dropdown-list-elements"
              {{on "click" (action "setBuildFilter" "cancel" dd)}}
            >
              <div class="dropdown-list-builds">
                <div class="box canceled"></div>
                <span>Canceled Builds</span>
              </div>
            </a>
          </li>
        {{/dd.content}}
      {{/basic-dropdown}}
    </div>
    <div>
      {{#basic-dropdown as |dd|}}
        {{#dd.trigger class="build-filter-label"}}
          {{this.buildYear}}
          <span class="caret down"></span>
        {{/dd.trigger}}
        {{#dd.content class="dropdown-content"}}
          {{#each this.buildYears as |buildYear|}}
            <li>
              <a
                class="dropdown-list-elements"
                {{on "click" (action "setBuildYear" buildYear dd)}}
              >
                {{{buildYear}}}
              </a>
            </li>
          {{/each}}
        {{/dd.content}}
      {{/basic-dropdown}}
    </div>
  </div>
  <div class="day-label-heatmap-container">
    <div class="day-label-container">
      <span class="day-label">Mon</span>
      <span class="day-label">Tue</span>
      <span class="day-label">Wed</span>
      <span class="day-label">Thu</span>
      <span class="day-label">Fri</span>
      <span class="day-label">Sat</span>
      <span class="day-label">Sun</span>
    </div>
    <div id="insights-heatmap"></div>
  </div>
</div>
{{yield}}