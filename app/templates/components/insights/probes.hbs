<div class="user-tests" id="user-tests">
  <section class="user-tests__content">
    {{#basic-dropdown as |dd|}}
      {{#dd.trigger class='modal-field active-probe-filter browser-default probe-input-filter dropdown-trigger'}}
        <span id="active-probe-text">{{this.probeFilterLabel}}</span>
      {{/dd.trigger}}
      {{#dd.content class='dropdown-content'}}
        <li>
          <a {{on 'click' (action 'setFilter' 'all' dd)}} class='{{if (eq this.probeFilter 'all') 'dropdown-selected'}} dropdown-list-elements' id="all-probe-filter">All Probes</a>
        </li>
        <li>
          <a {{on 'click' (action 'setFilter' 'active' dd)}} class='{{if (eq this.probeFilter 'active') 'dropdown-selected'}} dropdown-list-elements'>Active Probes</a>
        </li>
        <li>
          <a {{on 'click' (action 'setFilter' 'inactive' dd)}} class='{{if (eq this.probeFilter 'inactive') 'dropdown-selected'}} dropdown-list-elements'>Inactive Probes</a>
        </li>
      {{/dd.content}}
    {{/basic-dropdown}}
    <Insights::ProbesList
      @probes={{this.probes}}
      @probeFilter={{this.probeFilter}}
    />
  </section>
</div>
