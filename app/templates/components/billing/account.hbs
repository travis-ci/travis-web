{{#if this.isLoading}}
  <LoadingIndicator/>
{{else}}
  <section class="billing">
    {{#if this.isEducation}}
      <Billing::Education
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
        @subscription={{this.subscription}}
      />
    {{/if}}
    {{#if this.isManual}}
      <BillingManual
        @subscription={{this.subscription}}
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
      />
    {{/if}}
    {{#if (or this.isManaged this.hasV2Subscription)}}
      <Billing::Subscription
        @selectedPlan={{this.selectedPlan}}
        @account={{this.account}}
      />
    {{/if}}
    {{#if this.isTrial}}
      <Billing::Trial
        @account={{this.account}}
        @selectedPlan={{this.selectedPlan}}
      />
    {{/if}}
  </section>
  {{#if this.invoices}}
    <Billing::Invoices
      @account={{this.account}}
      @invoices={{this.invoices}}
      @subscription={{this.subscription}}
    />
  {{/if}}
{{/if}}
