<div class='selected-plan' data-test-selected-addon='true'>
  <div class='selected-plan__details'>
    <p class='selected-plan__details--name' data-test-selected-addon-name>
      {{this.selectedAddon.name}}
    </p>
    <button onClick={{action this.goToFirstStep}} class='mt-3 button--white button--hover' data-test-change-selected-plan>
      Change addon
    </button>
  </div>
  <div>
    <div class='selected-plan__price'>
      <p class='selected-plan__price--total' data-test-plan-total='true'>
        Total:
      </p>
      <p class='selected-plan__price--large' data-test-selected-addon-price>
        {{format-currency this.selectedAddon.price floor="true"}}
      </p>
    </div>
  </div>
</div>
