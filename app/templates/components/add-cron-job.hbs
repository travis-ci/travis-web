{{#travis-form
  onSubmit=(perform save)
  as |form|
}}
  <div class='form-elem select'>
    {{#form.field
      label='Branch'
      value=selectedBranch
      required=true
      class='branch-selector'
      showValidationStatusIcons=false
      as |field|
    }}
      {{#field.select
        searchField='name'
        placeholder='Select branch'
        selected=selectedBranch
        onchange=(action (mut selectedBranch))
        search=(perform search)
        as |branch|
      }}
        {{branch.name}}
      {{/field.select}}
    {{/form.field}}
  </div>
  <div class='form-elem select'>
    {{#form.field
      label='Interval'
      required=true
      value=selectedInterval
      onChange=(action (mut selectedInterval))
      showValidationStatusIcons=false
      as |field|
    }}
      {{#field.select options=intervals as |interval|}}
        {{interval}}
      {{/field.select}}
    {{/form.field}}
  </div>
  <div class='form-elem select'>
    {{#form.field
      label='Options'
      required=true
      value=selectedOption
      onChange=(action (mut selectedOption))
      showValidationStatusIcons=false
      as |field|
    }}
      {{#field.select options=options as |option|}}
        {{option.name}}
      {{/field.select}}
    {{/form.field}}
  </div>
  <div class='form-elem'>
     {{#if save.isRunning}}
      {{loading-indicator}}
    {{else}}
      <button
        onclick={{form.submit}}
        class='cron-form-submit form-submit'>
        Add
      </button>
    {{/if}}
  </div>
{{/travis-form}}
