<Notification
  @type='global'
  @severity='warning'
>
    <span data-test-flash-message-text class="message">
      Builds temporarily disabled for private repositories due to insufficient or disabled credits.
      Please visit
      {{#if @isUser}}
        <LinkTo @route="account.billing">Plan page</LinkTo>
      {{else}}
        <LinkTo @route="organization.billing" @model={{@owner}}>Plan page</LinkTo>
      {{/if}}
      to replenish your credit balance.
    </span>
</Notification>
