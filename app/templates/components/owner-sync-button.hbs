<div class="sync-button">
  {{#if this.owner.isSyncing}}
    <p>
      <button class="button" disabled="disabled" type="button">
        <span class="lading-indicator--white">
          <i></i>
          <i></i>
          <i></i>
        </span>
        Syncing
      </button>
    </p>
  {{else if this.owner.roMode}}
    <button class="button" disabled="disabled" type="button"></button>
  {{else}}
    <p>
      <button class="button" type="button" {{action this.sync}}>
        <span class="icon icon-sync"></span> Sync account
      </button>
    </p>
    <p class="sync-last">
      last synced {{format-time this.owner.syncedAt}}
    </p>
  {{/if}}
</div>
