<div class="media-elem">
  {{user-avatar url=account.avatarUrl name=name size=36}}
</div>
<div class="media-body">
  {{#link-to "account" account.login (query-params offset=0)}}
    <h2>{{name}}</h2>
    {{#if account.reposCount}}<p class='repository-count'>{{pluralize account.reposCount 'repository'}}</p>{{else}}No repositories{{/if}}
  {{/link-to}}

  {{#if isUser}}
    <p class="profile-user-last">Token:
      {{#if tokenIsVisible}}
        <strong>{{auth.currentUser.token}}</strong>
      {{/if}}
      <a {{action 'tokenVisibility' prevenDefault=true}} class="profile-token-toggle {{if tokenIsVisible 'is-visible'}} dropdown">
        {{#tooltip-on-element}}{{#if tokenIsVisible}}hide token{{else}}show token{{/if}}{{/tooltip-on-element}}
        {{svg-jar 'icon-seemore' class="icon icon-seemore"}}
      </a>
    </p>
  {{/if}}
</div>
