<figure class="team-image">
  <img class="front" src="/images/team/team-{{member.image}}.jpg" alt="{{member.name}}">
  <img class="back" src="/images/team/{{member.image}}-animated.gif" alt="{{member.name}} gif">
</figure>
<h3 class="team-name">{{member.name}}</h3>
<p class="team-title">{{member.title}}</p>
{{#if member.handle}}
  <p class="team-handle"><a href="https://twitter.com/{{member.handle}}" title="{{member.name}} on Twitter">@{{member.handle}}</a></p>
{{/if}}
<div class="team-flags">
  <img class="{{member.nationality}}" src="/images/pro-landing/flag-{{member.nationality}}.svg" alt="{{nationalitySentence}} flag" title="is from {{nationalitySentence}}">
  <span class="flag-divider">/</span>
  <img class="{{member.country}}" src="/images/pro-landing/flag-{{countryOrAlias}}.svg" alt="{{countrySentence}} flag" title="lives in {{countrySentence}}">
</div>
