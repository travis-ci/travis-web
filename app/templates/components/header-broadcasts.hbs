{{#unless features.enterpriseVersion}}
  {{#if auth.signedIn}}
    <BroadcastTower
      @toggleBroadcasts={{action "toggleBroadcasts"}}
      @status={{broadcasts.lastBroadcastStatus}}
      @count={{broadcasts.length}}
    />
    <ul class="broadcasts {{if showBroadcasts "is-open"}}">
      {{#each broadcasts.content as |broadcast|}}
        <li title="Transmitted on {{broadcast.created_at}}">
          <p>
            <span class="broadcast-status {{broadcast.category}}"></span>
            <span class="message">
              {{{broadcast.message}}}
            </span>
            <button
              title="hide this broadcast"
              class="broadcast-close no-button"
              type="button"
              {{action "markBroadcastAsSeen" broadcast}}
            >
              {{svg-jar "icon-failed" class="icon"}}
            </button>
          </p>
        </li>
      {{else}}
        <li>
          <p>
            There are no broadcasts
          </p>
        </li>
      {{/each}}
    </ul>
  {{/if}}
{{/unless}}