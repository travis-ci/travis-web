{{#if this.error}}
  <Notification
    @type='alert'
    @severity='error'
    >
  {{#if (or (eq this.errorType 'log_expired') (eq this.errorType 'log_access_denied'))}}
    {{this.errorMessage}}
  {{else}}
    There was an error while trying to fetch the log.
  {{/if}}
  </Notification>
{{else if this.log.fetchTask.isRunning}}
  <LoadingIndicator />
{{else}}
  <LogContent
    data-test-job-log-content="true"
    @log={{this.log}}
    @job={{this.job}}
  />
{{/if}}
