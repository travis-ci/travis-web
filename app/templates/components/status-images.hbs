<h3 class="h3--teal">
  Status Image
</h3>
<TravisForm
  @onSubmit={{action "closeModal"}}
  as |form|
>
  <div class="form-elem">
    <form.field
      data-test-status-image-branch="true"
      @label="Branch"
      @placeholder="Select a branch"
      @value={{this.branch}}
      @showValidationStatusIcons={{false}}
      @onChange={{action (mut this.branch)}}
      as |field|
    >
      <field.select
        @search={{perform this.searchBranches}}
        as |branch|
      >
        {{branch}}
      </field.select>
    </form.field>
  </div>
  <div class="form-elem">
    <form.field
      data-test-status-image-format="true"
      @label="Format"
      @value={{this.format}}
      @showValidationStatusIcons={{false}}
      @onChange={{action (mut this.format)}}
      as |field|
    >
      <field.select @options={{this.formats}} as |format|>
        {{format}}
      </field.select>
    </form.field>
  </div>
  <div class="form-elem">
    <form.field
      data-test-status-image-result="true"
      @label="Result"
      as |field|
    >
      <field.textarea>{{this.statusString}}</field.textarea>
    </form.field>
  </div>
  <button
    type="button"
    title="Close modal"
    class="modal-close pointer"
    onclick={{action form.submit}}
  >
    <SvgImage @name="icon-failed" @class="icon" />
  </button>
</TravisForm>
