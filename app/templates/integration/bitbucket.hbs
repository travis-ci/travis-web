<UiKit::Box
  @color='grey-lighter'
  @padding={{hash y=32}}
>
  <UiKit::Box
    @tag='section'
    @display='flex'
    @flexDir='col'
    @flexAlign='center'
    @margin={{hash x='auto'}}
    @maxWidth='6xl'
    @padding={{hash x=4}}
