{{!-- Header section --}}
<UiKit::Box>
  <UiKit::Box
    @tag='section'
    @margin={{hash bottom=16 x='auto'}}
    @maxWidth='6xl'
    @padding={{hash x=4}}
    data-test-integration-bb-header-section="true"
  >
    <UiKit::Grid @align='center' @gap={{4}} as |grid|>
      <grid.item @sm='full' @md='2/3' @lg='2/3'>
        <UiKit::Text
          @tag='h1'
          @variant='h1'
          @leading={{hash base='none' md='2xs' lg='sm'}}
        >
          Test your Bitbucket
          projects with Travis CI
        </UiKit::Text>
        <UiKit::Text @variant='p'>
          Build, test, and deploy your software seamlessly with the Atlassian Bitbucket
          integration for Travis CI
        </UiKit::Text>
        <UiKit::ButtonSignin @provider='bitbucket' @isSignup={{true}} />
      </grid.item>
      <grid.item @sm='full' @md='1/3' @lg='1/3'>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='bb-integrate' />
        </UiKit::Box>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>
</UiKit::Box>

{{!-- Highlights section --}}
<UiKit::Box
  @borderWidth={{hash bottom='xs'}}
  @margin={{hash bottom=16}}
>
  <UiKit::Box
    @tag='section'
    @maxWidth='6xl'
    @margin={{hash x='auto'}}
    @padding={{hash x=4 bottom=16}}
    data-test-integration-bb-highlights-section="true"
  >
    <UiKit::Grid @align='center' @gap={{6}} as |grid|>
      {{!-- Row 1 --}}
      <grid.item @sm='6/12' @margin={{hash sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-console' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          Integrate Bitbucket in seconds
        </UiKit::Text>
        <UiKit::Text>
          Time is important when you're building software. So don't fret,
          we'll spin Travis CI with Bitbucket within seconds.
        </UiKit::Text>
      </grid.item>

      {{!-- Row 2 --}}
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=4) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          Bitbucket connects with Travis CI
        </UiKit::Text>
        <UiKit::Text>
          Bitbucket lets Travis CI know instantly when something is committed
          and lets the rest happen by itself.
        </UiKit::Text>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='bb-connect' />
        </UiKit::Box>
      </grid.item>

      {{!-- Row 3 --}}
      <grid.item @sm='6/12' @margin={{hash sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-community' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          The Travis CI Community
        </UiKit::Text>
        <UiKit::Text>
          Travis CI has a one of a kind, supportive community which is
          always ready to hear your voice. We're excited to read your
          suggestions, comments, and questions.
        </UiKit::Text>
      </grid.item>
    </UiKit::Grid>

    <UiKit::ButtonSignin @provider='bitbucket' @isSignup={{true}} />
  </UiKit::Box>
</UiKit::Box>

{{!-- Build flow section --}}
<UiKit::Box
  @tag='section'
  @margin={{hash bottom=16 x='auto'}}
  @maxWidth='6xl'
  @padding={{hash x=4}}
  data-test-integration-bb-header-section="true"
>
  <UiKit::Text @variant='h2'>
    Get up and running with Travis CI and Bitbucket in seconds
  </UiKit::Text>

  <UiKit::Box
    @display='flex'
    @margin={{hash x='auto'}}
    @maxWidth='full'
    @position={{hash type='relative'}}
    @width={{hash base='max-content' md='full'}}
    class="flex-col items-start justify-between md:flex-row md:items-start"
  >
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash bottom=4) md=(hash right=4 bottom=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
      class="items-center md:flex-col"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} class="flex-shrink-0"><SvgImage @name='pull-icon-1' /></UiKit::Box>
      <UiKit::Text>A pull request is created</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @layer='30'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
      class="items-center md:flex-col"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} class="flex-shrink-0"><SvgImage @name='pull-icon-2' /></UiKit::Box>
      <UiKit::Text>Cloud platform tells Travis CI the build is mergeable</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @layer='30'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
      class="items-center md:flex-col"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} class="flex-shrink-0"><SvgImage @name='push-icon-3' /></UiKit::Box>
      <UiKit::Text>Hooray! <br /> Your build passes!</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @layer='30'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
      class="items-center md:flex-col"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} class="flex-shrink-0"><SvgImage @name='pull-icon-4' /></UiKit::Box>
      <UiKit::Text>Travis CI updates the PR that it passed</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash top=4) md=(hash top=0 left=4)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
      class="items-center md:flex-col"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} class="flex-shrink-0"><SvgImage @name='pull-icon-5' /></UiKit::Box>
      <UiKit::Text>You merge in the PR goodness</UiKit::Text>
    </UiKit::Box>

    <UiKit::Box
      @height={{hash md=1}}
      @position={{hash base=(hash type='absolute' top=0 bottom=0 left=0) md=(hash bottom='auto' right=0)}}
      @width={{hash base=1 md='auto'}}
      class='build-flow-diagram__bar'
    >
      <UiKit::Box
        @borderColor='white'
        @borderWidth={{hash all='md'}}
        @color='grey-lighter'
        @height={{5}}
        @layer='10'
        @margin={{hash base=(hash left=-2 top=-3) md=(hash left=-4 top=-2)}}
        @position={{hash base=(hash type='absolute' top=0) md=(hash left=0)}}
        @radius='full'
        @width={{5}}
      ></UiKit::Box>
      <UiKit::Box
        @color='grey-lighter'
        @height='full'
        @layer='20'
        @position={{hash type='relative'}}
        @width='full'
      ></UiKit::Box>
      <UiKit::Box
        @borderColor='white'
        @borderWidth={{hash all='md'}}
        @color='grey-lighter'
        @height={{5}}
        @layer='10'
        @margin={{hash base=(hash left=-2 bottom=-3) md=(hash left=0 right=-2 bottom=-2)}}
        @position={{hash base=(hash type='absolute' bottom=0) md=(hash right=0)}}
        @radius='full'
        @width={{5}}
      ></UiKit::Box>
    </UiKit::Box>
  </UiKit::Box>
</UiKit::Box>