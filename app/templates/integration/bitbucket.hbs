{{!-- Header section --}}
<UiKit::Box
  @color='white'
  @layer='10'
  @position={{hash type='relative'}}
  @padding={{hash top=24 bottom=1}}
  @shadow='md'
>
  <UiKit::Box
    @tag='section'
    @margin={{hash bottom=12 x='auto'}}
    @maxWidth='6xl'
    @padding={{hash x=4}}
    data-test-integration-bb-header-section="true"
  >
    <UiKit::Grid @align='center' @gap={{4}} as |grid|>
      <grid.item @sm='full' @md='1/2' @lg='2/3'>
        <UiKit::Box
          @display='flex'
          @flexDir='col'
          @flexAlign={{hash base='center' md='start'}}
          @textAlign={{hash base='center' md='left'}}
        >
          <UiKit::Text
            @tag='h1'
            @variant='h1'
            @margin={{hash bottom=2}}
            @leading={{hash base='none' md='2xs' lg='sm'}}
          >
            Test your Bitbucket
            projects with Travis CI
          </UiKit::Text>
          <UiKit::Text @margin={{hash bottom=8}}>
            Build, test, and deploy your software seamlessly with the Atlassian Bitbucket
            integration for Travis CI
          </UiKit::Text>
          <UiKit::ButtonSignin
            @provider='bitbucket'
            @isSignup={{true}}
            @isBetaBadgeVisible={{false}}
            @isLogoSeparatorVisible={{false}}
          />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='full' @md='1/2' @lg='1/3'>
        <UiKit::Box
          @maxWidth='sm'
          @margin={{hash base=(hash x='auto' top=8) md=(hash top=0)}}
        >
          <SvgImage @name='bb-integrate' />
        </UiKit::Box>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>
</UiKit::Box>

{{!-- Highlights section --}}
<UiKit::Box
  @borderWidth={{hash bottom='xs'}}
  @margin={{hash bottom=16}}
>
  <UiKit::Box
    @tag='section'
    @maxWidth='6xl'
    @margin={{hash x='auto'}}
    @position={{hash type='relative'}}
    @padding={{hash x=4 bottom=16}}
    @textAlign={{hash base='center' sm='left'}}
    data-test-integration-bb-highlights-section="true"
  >
    <UiKit::Box
      @layer='0'
      @margin={{hash top=-16 left=12}}
      @pin='top-left'
      @width={{56}}
    >
      <SvgImage @name="yellow-waves" />
    </UiKit::Box>
    <UiKit::Box
      @layer='0'
      @margin={{hash top=-12 right=12}}
      @pin='top-right'
      @width={{56}}
    >
      <SvgImage @name="grey-gradient-circle" />
    </UiKit::Box>

    <UiKit::Grid @align='center' @gap={{6}} as |grid|>
      {{!-- Row 1 --}}
      <grid.item @sm='1/2' @margin={{hash sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-console' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='1/2' @margin={{hash base=(hash bottom=20) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light' @size='4.5xl'>
          Integrate Bitbucket in seconds
        </UiKit::Text>
        <UiKit::Text>
          Time is important when you're building software. So don't fret,
          we'll spin Travis CI with Bitbucket within seconds.
        </UiKit::Text>
      </grid.item>

      {{!-- Row 2 --}}
      <grid.item
        @sm='1/2'
        @margin={{hash base=(hash bottom=20) sm=(hash y=10)}}
        @order={{hash base=4 sm='none'}}
      >
        <UiKit::Text @variant='h2' @color='blue-light' @size='4.5xl'>
          Bitbucket connects with Travis CI
        </UiKit::Text>
        <UiKit::Text>
          Bitbucket lets Travis CI know instantly when something is committed
          and lets the rest happen by itself.
        </UiKit::Text>
      </grid.item>
      <grid.item
        @sm='1/2'
        @margin={{hash base=(hash bottom=4) sm=(hash y=10)}}
        @order={{hash base=3 sm='none'}}
      >
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='bb-connect' />
        </UiKit::Box>
      </grid.item>

      {{!-- Row 3 --}}
      <grid.item @sm='1/2' @margin={{hash sm=(hash y=10)}} @order={{5}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-community' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='1/2' @margin={{hash base=(hash bottom=20) sm=(hash y=10)}} @order={{6}}>
        <UiKit::Text @variant='h2' @color='blue-light' @size='4.5xl'>
          The Travis CI Community
        </UiKit::Text>
        <UiKit::Text>
          Travis CI has a one of a kind, supportive community which is
          always ready to hear your voice. We're excited to read your
          suggestions, comments, and questions.
        </UiKit::Text>
      </grid.item>
    </UiKit::Grid>

    <UiKit::Box @margin={{hash sm=(hash top=10)}} @textAlign='center'>
      <UiKit::ButtonSignin
        @provider='bitbucket'
        @isSignup={{true}}
        @isLogoSeparatorVisible={{false}}
      />
    </UiKit::Box>
  </UiKit::Box>
</UiKit::Box>

{{!-- Build flow section --}}
<UiKit::Box
  @tag='section'
  @margin={{hash bottom=32 x='auto'}}
  @maxWidth='6xl'
  @padding={{hash x=4}}
  data-test-integration-bb-flow-section="true"
>
  <UiKit::Text @variant='h2' @align='center'>
    Get up and running with Travis CI and Bitbucket in seconds
  </UiKit::Text>

  <UiKit::Box
    @display='flex'
    @flexDir={{hash base='col' md='row'}}
    @flexAlign='start'
    @flexJustify='between'
    @margin={{hash x='auto'}}
    @maxWidth='full'
    @position={{hash type='relative'}}
    @width={{hash base='max-content' md='full'}}
    class="build-flow-diagram"
  >
    <UiKit::Box
      @display='flex'
      @flexDir={{hash base='row' md='col'}}
      @flexAlign='center'
      @margin={{hash base=(hash bottom=4) md=(hash right=4 bottom=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} @flex='shrink-none'><SvgImage @name='pull-icon-1' /></UiKit::Box>
      <UiKit::Text>A pull request is created</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @flexDir={{hash base='row' md='col'}}
      @flexAlign='center'
      @layer='10'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} @flex='shrink-none'><SvgImage @name='pull-icon-2' /></UiKit::Box>
      <UiKit::Text>Cloud platform tells Travis CI the build is mergeable</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @flexDir={{hash base='row' md='col'}}
      @flexAlign='center'
      @layer='10'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} @flex='shrink-none'><SvgImage @name='pull-icon-3' /></UiKit::Box>
      <UiKit::Text>Hooray! <br /> Your build passes!</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @flexDir={{hash base='row' md='col'}}
      @flexAlign='center'
      @layer='10'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} @flex='shrink-none'><SvgImage @name='pull-icon-4' /></UiKit::Box>
      <UiKit::Text>Travis CI updates the PR that it passed</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @flexDir={{hash base='row' md='col'}}
      @flexAlign='center'
      @margin={{hash base=(hash top=4) md=(hash top=0 left=4)}}
      @textAlign={{hash md='center'}}
      @width={{hash md='1/5'}}
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}} @flex='shrink-none'><SvgImage @name='pull-icon-5' /></UiKit::Box>
      <UiKit::Text>You merge in the PR goodness</UiKit::Text>
    </UiKit::Box>

    <UiKit::Box
      @color='grey-light'
      @height={{hash md=1}}
      @position={{hash base=(hash type='absolute' top=0 bottom=0 left=0) md=(hash bottom='auto' right=0)}}
      @width={{hash base=1 md='auto'}}
      class='build-flow-diagram__bar'
    >
      <UiKit::Box
        @color='grey-light'
        @height={{5}}
        @margin={{hash base=(hash left=-2 top=-3) md=(hash left=-4 top=-2)}}
        @position={{hash base=(hash type='absolute' top=0) md=(hash left=0)}}
        @radius='full'
        @width={{5}}
      ></UiKit::Box>
      <UiKit::Box
        @color='grey-light'
        @height={{5}}
        @margin={{hash base=(hash left=-2 bottom=-3) md=(hash left=0 right=-2 bottom=-2)}}
        @position={{hash base=(hash type='absolute' bottom=0) md=(hash right=0)}}
        @radius='full'
        @width={{5}}
      ></UiKit::Box>
    </UiKit::Box>
  </UiKit::Box>
</UiKit::Box>

