<JobWrapper @repo={{this.repo}} @job={{this.job}}>
  {{#if this.job.isLoaded}}
    <BuildHeader
      data-test-build-header
      @item={{this.job}}
      @commit={{this.job.commit}}
      @repo={{this.repo}}
    />
    <JobInfrastructureNotification @job={{this.job}} />
    <JobTabs
      @route="job"
      @model={{this.job}}
      @request={{this.job.build.request}}
      @repo={{this.repo}}
    />
  {{else}}
    <div id="job">
      <LoadingIndicator />
    </div>
  {{/if}}
</JobWrapper>
