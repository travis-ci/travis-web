<div class="wrapper {{if auth.signedOut "centered"}}">
  <TopBar />
  <FlashDisplay />
  <div class="wrapper-main">
    <div id="main" class="main" role="main">
      {{#if repo}}
        <RepositoryLayout
          @repo={{repo}}
          @build={{build}}
          @job={{job}}
          @tab={{tab}}
        />
      {{else if repositories.loadingData}}
        <LoadingIndicator />
      {{else}}
        <MissingNotice @title="No repositories found" />
      {{/if}}
    </div>
  </div>
  {{#if auth.signedIn}}
    {{#unless features.dashboard}}
      <aside id="left" class="{{unless auth.signedIn "hidden"}}">
        <RepositorySidebar />
      </aside>
    {{/unless}}
  {{/if}}
</div>