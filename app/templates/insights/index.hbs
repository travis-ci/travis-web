<div class="spotlight">
  <span class="insights-title">
    Travis CI Insights
  </span>

  <div class="insights-filter">
    <InsightsFilter @selectedRepoIds={{this.selectedRepoIds}} @setSelectedRepoIds={{action "setSelectedRepoIds"}} />
    <DateRangePicker @setStartMonth={{action "setStartMonth"}} @setEndMonth={{action "setEndMonth"}}/>
  </div>

  <AggregateMatrices @selectedRepoIds={{this.selectedRepoIds}} @startTime={{this.startTime}} @endTime={{this.endTime}} @setCurrentRepos={{action "setCurrentRepos"}} @timeZone={{this.timeZone}} />
  <TimeseriesChart @selectedRepoIds={{this.selectedRepoIds}} @timeStart={{this.startTime}} @timeEnd={{this.endTime}} @currentRepos={{this.currentRepos}} />

  <Heatmap @selectedRepoIds={{this.selectedRepoIds}} @timeZone={{this.timeZone}} />
</div>
