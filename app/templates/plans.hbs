<TravisLayout @layoutName="layouts/center" class="tailwind-overrides">

  {{!-- Header section --}}
  <UiKit::Box
    @tag='section'
    @margin={{hash top=3 bottom=16}}
    @textAlign='center'
  >
    <UiKit::Text @tag='h1' @size='6xl' @weight='bold'>
      Built for every team
    </UiKit::Text>
    <UiKit::Text>
      Set up your first project in just one minute.
      <br />
      Your first 100 builds are free! No credit card required.
    </UiKit::Text>
  </UiKit::Box>

  {{!-- Product section --}}
  <UiKit::Box @tag='section' @margin={{hash bottom=16}}>
    <UiKit::Grid @align='center' @justify='start'>
      <UiKit::Text @tag='span' @transform='uppercase' @weight='bold' @margin={{hash right=2}}>
        Monthly
      </UiKit::Text>

      <UiKit::Switch @onClick={{fn (mut showAnnual)}} @active={{showAnnual}} />

      <UiKit::Text @tag='span' @color='blue' @margin={{hash left=2}}>
        <UiKit::Text @tag='span' @color='blue' @transform='uppercase' @weight='bold'>Annual</UiKit::Text>
        (Get 1 month free!)
      </UiKit::Text>
    </UiKit::Grid>

    <UiKit::Box @position={{hash type='relative'}} @margin={{hash top=3}}>
      <UiKit::Box
        @position={{hash type='absolute' top=0 right=0}}
        @margin={{hash top=-16 right=-10}}
        @height={{64}}
      >
        <SvgImage @name="grey-blob" @height={{224}} />
      </UiKit::Box>

      <UiKit::Box
        @color='white'
        @layer='10'
        @overflow='hidden'
        @position={{hash type='relative'}}
        @radius='base'
        @shadow='base'
      >
        <UiKit::Grid @base={{2}} @md={{4}} as |grid|>
          {{#each plansToDisplay as |plan|}}
            <grid.item>
              <UiKit::Box
                @borderColor='grey-150'
                @borderWidth={{hash all='xs'}}
                @height='full'
                @padding={{hash all=4}}
              >
                <UiKit::Text @tag='h3' @size='3xl' @weight='bold'>
                  {{plan.name}}
                </UiKit::Text>

                <UiKit::Text
                  @tag='h4'
                  @color='grey'
                  @margin={{hash bottom=6}}
                  @size='lg'
                  @transform='uppercase'
                  @weight='bold'
                >
                  {{plan.description}}
                </UiKit::Text>
                <div>
                  <UiKit::Text @tag='span' @color='green' @weight='bold'>
                    {{plan.builds}}
                  </UiKit::Text>
                  {{pluralize plan.builds "Concurrent job" without-count=true}}
                </div>
                <div>
                  <UiKit::Box @display='inline-block' @width={{3}}>
                    <SvgImage @name="features-check" />
                  </UiKit::Box>
                  Unlimited build minutes
                </div>
                <div>
                  <UiKit::Box @display='inline-block' @width={{3}}>
                    <SvgImage @name="features-check" />
                  </UiKit::Box>
                  Unlimited repositories
                </div>
                <UiKit::Box @margin={{hash bottom=6}}>
                  <UiKit::Box @display='inline-block' @width={{3}}>
                    <SvgImage @name="features-check" />
                  </UiKit::Box>
                  Unlimited collaborators
                </UiKit::Box>
                <UiKit::Box @margin={{hash bottom=6}}>
                  <UiKit::Text @tag='span' @color='green' @size='xl' @weight='bold'>
                    ${{plan.monthlyPriceRounded}}
                  </UiKit::Text>
                  <UiKit::Text @tag='span' @size='sm'>
                    {{plan.currency}}
                    per month
                    {{if showAnnual 'billed annually'}}
                  </UiKit::Text>
                </UiKit::Box>
              </UiKit::Box>
            </grid.item>
          {{/each}}
        </UiKit::Grid>

        <UiKit::Box @borderColor='grey-150' @borderWidth={{hash all='xs'}} @padding={{hash all=4}} @textAlign='center'>
          <UiKit::Button @onClick={{action 'gaCta' 'plans-table'}}>
            Start Your Free Trial
          </UiKit::Button>
        </UiKit::Box>
      </UiKit::Box>

      <UiKit::Box
        @layer='0'
        @margin={{hash bottom=-10 left=-10}}
        @position={{hash type='absolute' bottom=0 left=0}}
        @width={{56}}
      >
        <SvgImage @name="yellow-waves" />
      </UiKit::Box>
    </UiKit::Box>
  </UiKit::Box>

  {{!-- Open Source Section --}}
  <UiKit::Box @tag='section' @margin={{hash bottom=16}}>
    <UiKit::Grid @sm={{2}} @align='center' @justify='around' as |grid|>
      <grid.item  @base='initial' @sm='initial'>
        <UiKit::Box @maxWidth='2xs' @padding={{hash y=4}}>
          <SvgImage @name='always-free' @width='100%'/>
        </UiKit::Box>
      </grid.item>
      <grid.item>
        <UiKit::Text @tag='h2' @leading='xs' @margin={{hash bottom=3}} @size='5xl' @weight='bold'>
          Free plan for Open Source
        </UiKit::Text>
        <UiKit::Text @margin={{hash bottom=6}}>
          We love Open Source and offer a free plan for your projects.
          You will receive 2 concurrent jobs for free and all the other
          features you've come to love from Travis CI.
        </UiKit::Text>

        <UiKit::Button @onClick={{action 'gaCta' 'plans-oss'}} @color='grey' @invert={{true}}>
          Set up your open source project now
        </UiKit::Button>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>

  {{!-- Contact form section --}}
  <UiKit::Box @tag='section' @margin={{hash bottom=16}}>
    <UiKit::Grid  @sm={{2}} @align='center' @justify='around' as |grid|>
      <grid.item>
        <UiKit::Text @tag='h2' @leading='xs' @margin={{hash bottom=3}} @size='5xl' @weight='bold'>
          Looking for something custom or on-prem?
        </UiKit::Text>
        <UiKit::Text>
          We can create a plan that's customized to your team's size and needs.
          Just use this form to contact us!
        </UiKit::Text>
      </grid.item>
      <grid.item>
        <TravisForm
          @onSubmit={{action "contactFormSubmit"}}
          as |form|
        >
          <form.field
            @label='Name'
            @required={{true}}
            @value={{this.contactName}}
            @onChange={{action (mut this.contactName)}}
            @requiredMark='Required'
            @showRequiredMark={{true}}
            class="text-grey-800"
            data-test-plans-contact-name="true"
            as |field|
          >
            <field.input />
          </form.field>
        </TravisForm>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>

  {{!-- Enterprise section --}}
  <UiKit::Box @tag='section' @margin={{hash bottom=16}}>
    <UiKit::Grid  @sm={{2}} @align='center' @justify='around' as |grid|>
      <grid.item @base='initial' @sm='initial'>
        <UiKit::Box @maxWidth='2xs' @padding={{hash y=4}}>
          <SvgImage @name='travis-enterprise' @width='100%'/>
        </UiKit::Box>
      </grid.item>
      <grid.item>
        <UiKit::Text @tag='h2' @leading='xs' @margin={{hash bottom=3}} @size='5xl' @weight='bold'>
          Travis CI Enterprise
        </UiKit::Text>
        <UiKit::Text @margin={{hash bottom=6}}>
          Our on-premises product is perfect for companies who
          want to keep using the same features of Travis CI with
          additional on-site security needs.
        </UiKit::Text>

        <ExternalLinkTo @href={{config.urls.enterprise}}>
          <UiKit::Button @color='grey' @invert={{true}}>
            Learn more about Travis CI Enterprise
          </UiKit::Button>
        </ExternalLinkTo>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>



  {{!-- FAQ Section --}}
  <UiKit::Box @position={{hash type='relative'}}>
    <UiKit::Box
      @position={{hash type='absolute' top=0 right=0}}
      @margin={{hash top=-10 right=-16}}
      @width={{64}}
    >
      <SvgImage @name="red-blob" />
    </UiKit::Box>

    <UiKit::Box
      @color='white'
      @layer='10'
      @margin={{hash bottom=16}}
      @position={{hash type='relative'}}
      @radius='base'
      @shadow='base'
    >
      <UiKit::Text @tag='h2' @size='5xl' @weight='bold' @padding={{hash all=5}}>
        Frequently asked questions
      </UiKit::Text>

      <UiKit::Grid  @base={{2}} as |grid|>
        {{!-- FAQ set 1 --}}
        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash all=5}}>
          <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
            What is a concurrent job?
          </UiKit::Text>
          <UiKit::Text>
            Every commit triggers a single job by default. If two commits have been pushed on the Startup plan,
            they'll be run right away. Subsequent commits have to wait until the builds finished.
          </UiKit::Text>
        </grid.item>

        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash y=5}}>
          <UiKit::Box @borderColor='grey-150' @borderWidth={{hash left='xs'}} @padding={{hash x=5}}>
            <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
              Are there any restrictions on build time?
            </UiKit::Text>
            <UiKit::Text>
              A build has 120 minutes to run. Should your build take longer, you can split it up using a build matrix.
            </UiKit::Text>
          </UiKit::Box>
        </grid.item>

        {{!-- FAQ set 2 --}}
        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash all=5}}>
          <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
            Can I pay annually?
          </UiKit::Text>
          <UiKit::Text>
            You most certainly can! When signing up for a subscription, simply select the annual option. You get 1 month for free &mdash;
            12 months for the price of 11!
          </UiKit::Text>
        </grid.item>

        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash y=5}}>
          <UiKit::Box @borderColor='grey-150' @borderWidth={{hash left='xs'}} @padding={{hash x=5}}>
            <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
              Can I cancel anytime?
            </UiKit::Text>
            <UiKit::Text>
              Absolutely! Contact us and we'll make sure your subscription gets cancelled as you want.
            </UiKit::Text>
          </UiKit::Box>
        </grid.item>

        {{!-- FAQ set 3 --}}
        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash all=5}}>
          <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
            Am I able to upgrade my plan?
          </UiKit::Text>
          <UiKit::Text>
            Yes, you can change your plan subscription at any time.
          </UiKit::Text>
        </grid.item>

        <grid.item @borderColor='grey-150' @borderWidth={{hash bottom='xs'}} @padding={{hash y=5}}>
          <UiKit::Box @borderColor='grey-150' @borderWidth={{hash left='xs'}} @padding={{hash x=5}}>
            <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
              Do the listed prices include VAT?
            </UiKit::Text>
            <UiKit::Text>
              Prices listed are excluding VAT, which will be added depending on origin (Germany and Europe). Make sure to have your company's
              VAT ID ready when entering billing details to remove VAT!
            </UiKit::Text>
          </UiKit::Box>
        </grid.item>

        {{!-- FAQ set 4 --}}
        <grid.item @padding={{hash all=5}}>
          <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
            How does the trial work?
          </UiKit::Text>
          <UiKit::Text>
            Your free trial includes 100 builds and starts as soon as you set up your first project and push a commit. The trial
            is limited to two concurrent jobs.
          </UiKit::Text>
        </grid.item>

        <grid.item @padding={{hash y=5}}>
          <UiKit::Box @borderColor='grey-150' @borderWidth={{hash left='xs'}} @padding={{hash x=5}}>
            <UiKit::Text @tag='h4' @size='xl' @weight='bold' @color='blue-light' @margin={{hash bottom=2}}>
              Do you have plans for students?
            </UiKit::Text>
            <UiKit::Text>
              We most certainly do! You can find all details on
              <UiKit::Link @href={{config.urls.education}}>
                {{format-domain config.urls.education}}
              </UiKit::Link>
            </UiKit::Text>
          </UiKit::Box>
        </grid.item>
      </UiKit::Grid>
    </UiKit::Box>

    <UiKit::Box
      @layer='0'
      @margin={{hash bottom=-16 left=-4}}
      @position={{hash type='absolute' bottom=0 left=0}}
      @width={{64}}
    >
      <SvgImage @name="green-gradient-circle" />
    </UiKit::Box>
  </UiKit::Box>
</TravisLayout>
